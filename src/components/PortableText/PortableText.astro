---
import { PortableText as PortableTextInternal } from 'astro-portabletext';

import PortableTextImage from './parts/PortableTextImage.astro';
import PortableTextParagraph from './parts/PortableTextParagraph.astro';
import PortableTextStrong from './parts/PortableTextStrong.astro';

interface Props {
  portableText: any;
}

const { portableText } = Astro.props;

const components = {
  block: {
    normal: PortableTextParagraph,
  },
  mark: {
    strong: PortableTextStrong,
  },
  type: {
    image: PortableTextImage,
  },
};
---

<PortableTextInternal value={portableText} components={components} />
