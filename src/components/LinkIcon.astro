---
import type { HTMLAttributes } from "astro/types";

interface Props extends HTMLAttributes<"a"> {
  iconSrc?: string;
}

const { iconSrc, class: className = "", ...rest } = Astro.props;
---

<a
  class={`inline-flex gap-2 underline underline-offset-4 ${className}`}
  {...rest}
>
  {iconSrc && <img src={iconSrc} alt="" />}
  <slot />
</a>
