---
import { focus } from "@constants/focus";
import MaxWidth from "@ui/components/MaxWidth.astro";
import PaperList from "./parts/PaperList.astro";
import PaperNote from "./parts/PaperNote.astro";
---

<section>
  <MaxWidth removeMobilePadding>
    <div class="sm:hidden">
      <PaperList />
    </div>

    <div
      class="hidden sm:flex sm:max-w-[55rem] mx-auto flex-col gap-6 lg:flex-row lg:max-w-full lg:gap-10"
    >
      {
        focus.map((item) => (
          <PaperNote title={item.title} description={item.description} />
        ))
      }
    </div>
  </MaxWidth>
</section>
