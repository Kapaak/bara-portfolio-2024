---
import { getAuthorFocuses } from '@sanity/api';
import DecoratedText from '@ui/components/DecoratedText.astro';
import Headline from '@ui/components/Headline.astro';
import MaxWidth from '@ui/components/MaxWidth.astro';

import PaperNote from './parts/PaperNote.astro';

const focuses = await getAuthorFocuses();
---

<section>
  <MaxWidth removeMobilePadding>
    <div class="flex flex-col gap-4 md:gap-12">
      <Headline
        ><DecoratedText intent="needle" position="right"
          >S čím pomůžu</DecoratedText
        ></Headline
      >
      <div
        class="flex flex-col gap-3.5 bg-primary px-4 py-6 md:flex-row md:gap-[7.7rem] md:rounded-small md:px-16.5 md:py-6"
      >
        {
          focuses?.map(focus => (
            <PaperNote
              title={focus?.name}
              description={focus?.description}
              icon={focus?.icon}
            />
          ))
        }
      </div>
    </div>
  </MaxWidth>
</section>
