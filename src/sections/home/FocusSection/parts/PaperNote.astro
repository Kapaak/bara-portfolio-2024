---
interface Props {
  title?: string;
  description?: string;
}

const { title, description }: Props = Astro.props;
---

<div
  class="relative paper-bg pt-[7rem] pb-[5rem] px-6 rotate-2 hover:rotate-0 transition-transform flex-1"
>
  <h2 class="font-secondary text-[3.4rem]">{title}</h2>
  <p>
    {description}
  </p>
</div>

<style>
  .paper-bg {
    background-image: url("/src/assets/elements/paper-note-height.svg");
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
