---
import { focus } from "@constants/focus";
---

<div
  class="relative flex flex-col gap-[5rem] paper-bg pt-[10rem] pb-[5rem] px-4"
>
  {
    focus.map((item) => (
      <div class="flex flex-col gap-4">
        <h2 class="font-secondary text-[3.4rem]">{item.title}</h2>
        <p>{item.description}</p>
      </div>
    ))
  }
</div>

<style>
  .paper-bg {
    background-image: url("/src/assets/elements/paper-note-height.svg");
    background-repeat: no-repeat;
    background-size: cover;
  }
</style>
