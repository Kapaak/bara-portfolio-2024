---
import MaxWidth from "@components/MaxWidth.astro";
import PaperList from "@components/PaperList.astro";
import PaperNote from "@components/PaperNote.astro";

import { focus } from "@constants/focus";
---

<section>
  <MaxWidth removeMobilePadding>
    <div class="sm:hidden">
      <PaperList />
    </div>

    <div
      class="hidden sm:flex sm:max-w-[55rem] mx-auto flex-col gap-6 lg:flex-row lg:max-w-full"
    >
      {
        focus.map((item) => (
          <PaperNote title={item.title} description={item.description} />
        ))
      }
    </div>
  </MaxWidth>
</section>
