---
import decorationSVG from '../../assets/hand-made/decoration.svg?raw';
---

<div>
  <div class="decoration absolute -left-15 top-[-3.5rem] z-10 text-secondary">
    <Fragment set:html={decorationSVG} />
  </div>
  <slot />
  <div
    class="decoration absolute bottom-[-4.5rem] right-[-5.5rem] z-10 rotate-180 text-secondary xl:block"
  >
    <Fragment set:html={decorationSVG} />
  </div>
</div>

<style>
  .decoration {
    display: none;
  }
  @media (min-width: 1399px) {
    .decoration {
      display: block;
    }
  }
</style>
