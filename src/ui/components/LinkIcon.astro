---
import type { ImageMetadata } from "astro";
import type { HTMLAttributes } from "astro/types";
import { Image } from "astro:assets";

interface Props extends HTMLAttributes<"a"> {
  iconSrc?: ImageMetadata;
}

const { iconSrc, class: className = "", ...rest } = Astro.props;
---

<a
  class={`inline-flex max-w-max gap-2 underline underline-offset-4 ${className}`}
  {...rest}
>
  {iconSrc && <Image src={iconSrc} alt="Ikona pro link" />}
  <slot />
</a>
